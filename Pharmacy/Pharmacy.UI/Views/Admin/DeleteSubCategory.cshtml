@using Pharmacy.Core
@model Pharmacy.Core.SubCategory

@{
    ViewData["Title"] = "DeleteCategory";
    Layout = "~/Views/Shared/_FlatLayout.cshtml";
    var meds = ViewBag.SubcategoryMed as List<Medicaments>;
}

<div class="pcoded-content">
    <!-- [ breadcrumb ] start -->
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-12">

                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html"><i class="feather icon-home"></i></a></li>
                        <li class="breadcrumb-item"><a href="#!">Підкатегорії</a></li>
                        <li class="breadcrumb-item"><a href="#!">Видалення</a></li>
                    </ul>
                </div>
            </div>
        </div>

    </div>


    <div class="row">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h5>Видалити підкатегорію?</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-8">
                            <div>
                                <dl class="row">
                                    <dt class="col-sm-4">
                                        @Html.DisplayNameFor(model => model.Name)
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Name)
                                    </dd>
                                </dl>                          



                                    @if (meds != null && meds.Count() > 0)
                                    {

                                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModalCenter">
                                            Видалити
                                        </button>

                                        <!-- Modal -->
                                        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLongTitle">Помилка</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Видалення неможливе! Існують прив'язані об'єкти!</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                        <button type="button" class="btn btn-primary">Save changes</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <a asp-action="Categories" class="btn btn-outline-dark">Повернутися до списку / Відмінити</a>
                                    }
                                    else
                                    {
                                        <form asp-action="DeleteSubCategory">
                                            @Html.AntiForgeryToken()
                                            <input asp-for="SubCategoryId" type="hidden" />
                                            <button type="submit" class="btn btn-danger">Видалити</button>
                                            <a asp-action="SubCategories" class="btn btn-outline-dark">Повернутися до списку / Відмінити</a>

                                        </form>

                                    }

                                </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>

