@using Pharmacy.Repos.Dto
@model IEnumerable<UserReadDto>

@{
    Layout = "~/Views/Shared/_FlatLayout.cshtml";
}




<div class="pcoded-content">
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <div class="page-header-title">
                        <h3 class="m-b-10">Список користувачів</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="float-end">
            <a href="/users/create" class="btn btn-outline-primary">Додати користувача</a>
        </div>

    </div>
    <div class="row">
        <!-- [ basic-table ] start -->
        <div class="col-md-12">
            <div class="card">
                <div class="card-body table-border-style">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Confirmed</th>
                                    <th>Roles</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var u in Model)
                                {
                                    <tr>
                                        <td>@u.FirstName @u.LastName</td>
                                        <td>@u.Email</td>
                                        <td>@u.IsConfirmed</td>
                                        <td>
                                            @string.Join(", ", u.Roles.Select(x=> x.Name))
                                        </td>
                                        <td>
                                            <a href="/users/edit/@u.Id" class="btn btn-warning">Редагувати</a>
                                            <a href="/users/delete/@u.Id" class="btn btn-danger">Видалити</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





